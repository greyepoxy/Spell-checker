{
  "name": "spellchecker",
  "version": "0.0.0",
  "description": "An attempt at making a spellchecker's brain",
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "private": true,
  "scripts": {
    "build": "npm install && npm run :build",
    "test": "ava",
    "watch": "run-p watch:*",
    "watch:compile": "run-s \":compile -- --watch\"",
    "watch:test": "ava --watch",
    ":build": "npm-run-all :clean -p :compile :copy:resources :lint -s test",
    ":clean": "rimraf ./lib",
    ":compile": "tsc -b src test",
    ":copy:resources": "cpy ./resources/words ./lib/resources",
    ":lint": "run-p :lint:*",
    ":lint:src": "tslint -p ./src",
    ":lint:test": "tslint -p ./test"
  },
  "author": "greyepoxy",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.0.10",
    "ava": "^2.1.0",
    "cpy-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.2"
  }
}
